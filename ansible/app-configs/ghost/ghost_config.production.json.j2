{% import '../macros/rinoa-macros.j2' as vault %}
{% set vault_addr = 'https://vault.trez.wtf' %}
{% set secrets_path = 'rinoa-docker/env' %}

{
  "url": "blog.trez.wtf",
  "database": {
    "client": "mysql",
    "connection": {
      "host"     : "mariadb",
      "port"     : 3306,
      "user"     : "ghost",
      "password" : "{{ vault.vault_secret('env', 'GHOST_DB_PASSWORD') }}",
      "database" : "ghost_db"
    }
  },
  "mail": {
    "from": "'Ghost @ Rinoa' <noreply@trez.wtf>",
    "transport": "SMTP",
    "options": {
      "host": "postal-smtp",
      "port": 25,
      "secure": false,
      "auth": {
        "user": "{{ vault.vault_secret('env', 'POSTAL_SMTP_AUTH_USER') }}",
        "pass": "{{ vault.vault_secret('env', 'POSTAL_SMTP_AUTH_PASSWORD') }}"
      }
    }
  },
  "paths": {
    "contentPath": "content/"
  },
  "privacy": {
    "useGravatar": true
  },
  "logging": {
    "level": "info",
    "rotation": {
      "enabled": true
    },
    "transports": ["file"]
  }
}