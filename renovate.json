{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "dependencyDashboard": true,
  "labels": [
    "dependencies",
    "renovate"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "clickhouse/clickhouse-server"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "allowedVersions": "/.*-alpine$/",
      "matchPackageNames": [
        "/.*-alpine$/"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/^.*:latest$/"
      ]
    }
  ],
  "customManagers": [],
  "branchNameStrict": true,
  "branchPrefix": "renovate/",
  "branchTopic": "{{service}}/{{depName}}",
  "commitMessageAction": "Update",
  "commitMessageTopic": "{{service}}/{{depName}}"
}
